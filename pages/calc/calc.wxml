<!--pages/calc/calc.wxml-->
<view class="page">
  <view class="container">
    <text>
      请选择您想要的服务类型：
    </text>
    <view class="div-line"></view>
    <view class="motto">
      <button class="btn" hover-class="button-hover"
          disabled="{{disabled}}" bindtap="toFull"> {{fullService}} </button>
    </view>
    <view class="motto">
      <button class="btn" over-class="button-hover"
          disabled="{{disabled}}" bindtap="toPartial"> {{partialService}} </button>
    </view>
  </view>
  <view class="fix-bottom">
    <view class="weui-footer">
      <view class="weui-footer__links">
          <text style="color: black" class="weui-footer__link">Mercury Studio</text>
      </view>
      <view class="weui-footer__text">Copyright © 2020: all rights reserved</view>
    </view>
  </view>
</view>
<image class="blackImage" src="../../images/business.jpg"> </image>