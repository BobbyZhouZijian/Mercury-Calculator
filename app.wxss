/**app.wxss**/
@import 'weui.wxss';

/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

text {
font-family:MicroSoft yahei;
}

.section__title{
  margin-bottom: 20rpx;
}
.section{
  margin: 50rpx 0;
  font-size: 30rpx;
}

.picker {
  color: burlywood;
  font-weight:bold;
}

.decision {
  border:1px solid #405f80;
  width:500rpx;
  border-radius:5rpx;
  text-align:center;
}

.web-colored {
  font-size: 17px;
  font-family: cursive;
  color: black;
}

.blackImage {
  position: absolute;
  top: 0px;
  bottom: 0px;
  left: 0px;
  right: 0px;
  height: 100%;
  width: 100%;
  filter: blur(0.4rem);
  z-index: -4;
}

button {
  display:block;
  padding-left:0px;
  padding-right:0px;
  line-height:10px;
  background: #ADA996;  /* fallback for old browsers */
  background: -webkit-linear-gradient(to right, #EAEAEA, #DBDBDB, #F2F2F2, #ADA996);  /* Chrome 10-25, Safari 5.1-6 */
  background: linear-gradient(to right, #EAEAEA, #DBDBDB, #F2F2F2, #ADA996); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */

}

.btn {
  color: grey;
  border-radius: 98rpx;
}

.btn::after {
  border-radius: 98rpx;
  border: 0;
}

.button-hover {
  color: white;
}

.div-line {
  background: gray;
  width: 70%;
  height: 3rpx;
}
